<script>
    function formatDateTime(dt) {
        const options = { 
            day: '2-digit', month: '2-digit', year: 'numeric',
            hour: '2-digit', minute: '2-digit'
        };
        return new Date(dt).toLocaleString([], options);
    }

    function calculateStay(arrival, departure) {
        const diffMs = new Date(departure) - new Date(arrival);
        if (diffMs <= 0) return "Invalid";
        const hours = Math.floor(diffMs / (1000 * 60 * 60));
        const minutes = Math.floor((diffMs % (1000 * 60 * 60)) / (1000 * 60));
        return `${hours}h ${minutes}m`;
    }

    function bookSlot() {
        const name = document.getElementById("name").value;
        const arrival = document.getElementById("arrival").value;
        const departure = document.getElementById("departure").value;

        if (!name || !arrival || !departure) {
            alert("Please fill all fields!");
            return;
        }

        const stay = calculateStay(arrival, departure);
        const timeLeft = calculateStay(new Date(), departure);

        document.getElementById("slotDetails").innerHTML = `
            <div class="status-item"><span class="label">Status:</span> <span class="value">Booked</span></div>
            <div class="status-item"><span class="label">Booked By:</span> <span class="value">${name}</span></div>
            <div class="status-item"><span class="label">Arrival Time:</span> <span class="value">${formatDateTime(arrival)}</span></div>
            <div class="status-item"><span class="label">Departure Time:</span> <span class="value">${formatDateTime(departure)}</span></div>
            <div class="status-item"><span class="label">Planned Stay:</span> <span class="value">${stay}</span></div>
            <div class="status-item"><span class="label">Time Left Until Departure:</span> <span class="value">${timeLeft}</span></div>
        `;
    }
</script>


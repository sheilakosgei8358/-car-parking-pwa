    <div id="slotDetails" class="status-box">
        <div class="status-item"><span class="label">Status:</span> <span class="value">Free</span></div>
        <div class="status-item"><span class="label">Booked By:</span> <span class="value">N/A</span></div>
        <div class="status-item"><span class="label">Arrival Time:</span> <span class="value">N/A</span></div>
        <div class="status-item"><span class="label">Departure Time:</span> <span class="value">N/A</span></div>
        <div class="status-item"><span class="label">Planned Stay:</span> <span class="value">N/A</span></div>
        <div class="status-item"><span class="label">Time Left Until Departure:</span> <span class="value">N/A</span></div>

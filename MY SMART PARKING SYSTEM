      display: flex;
      justify-content: center;
      align-items: flex-start;
    }
    .card {
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      padding: 20px;
      max-width: 400px;
      width: 100%;
    }
    h2 {
      text-align: center;
      margin-bottom: 15px;
    }
    .status {
      font-size: 1.2em;
      font-weight: bold;
      padding: 8px;
      border-radius: 6px;
      display: inline-block;
    }
    .status.free { background-color: #d4edda; color: #155724; }
    .status.occupied { background-color: #f8d7da; color: #721c24; }
    .status.booked { background-color: #fff3cd; color: #856404; }
    .detail {
      margin: 8px 0;
      font-size: 0.95em;
    }
